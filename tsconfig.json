    //   "isolatedModules": true,
      "jsx": "react", //was preserve defaultin nextapp
    //   "incremental": true,
      "declaration": true,
      "outDir": "dist",
      "sourceMap": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "typeRoots": [
          "./node_modules/@types",
          "./typings"
      ]
    },
    "include": [
      "src", 
      "src/**/*.css"],
      "exclude": ["node_modules"]
  }
  
  