{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src", "src/**/*.css"],
  "exclude": ["node_modules"]
}
